<!-- Main -->
<div id="main">
    <div class="inner">
        <h1>Checkout</h1>
    </div>
    <div class="inner">
        {{#if products }}
    <div class="cart page">
        <ul class="list-group d-flex flex-lg-row">
            {{#each products }}
            <li class="list-group-item clearfix">
                <div>
                    <strong>{{ this.item.name }}</strong><br/>
                </div>
                <div>
                    <img src="{{this.item.image}}" class="img-fluid" alt="">
                </div>
                <div >
                    <form method="GET" action="/cart/edit">
                    <input type="hidden" id="bookiD" name="bookiD" value="{{this.item._id}}">
                        <span>Quantity:
                            <input id="newQ" type="text" class="primary number-input" value="{{this.quantity}}" pattern="(199|[0-1]?[0-9]?[0-9])" title="Giá trị khoảng từ 0 ~ 199"
                            aria-label="newQ" name="newQ">
                            <input type="submit" class="primary" value="Apply" style="margin-top:1em;">
                        </span>
                    </form>
                </div>
                <div >
                    <a href="/cart/remove?id={{this.item._id}}"><button class="primary"> Remove</button></a>
                    <a href="/products/{{this.item._id}}"><button class="primary"> See detail</button></a>
                </div>
                <div >
                     Total price: ${{ this.price }}
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
    <div class="text-right">
        <strong>Total: ${{ totalPrice }}</strong>
    </div>
    <hr>
    <div class="text-right">
        <form action="/cart/checkout" method="GET">
            <input type="submit" class="btn btn-success " value="Check Out"></input>
        </form>
           
    </div>  
{{else}}
    Your shopping cart is empty.
    <br>
    <br>
    <br>
    <div class="text-right">
        <a href="/products"><button  type="button" class="btn primary">BACK TO SHOPPING</button></a>
    </div>
{{/if}}
    </div>
</div>