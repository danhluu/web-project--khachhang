<div class="container col-sm-3 col-sm-offset-1">
  <div class="list-group">
    <a class="list-group-item text-center" data-toggle="tab"><img src="{{this.user.avatar}}" name = "avatar" height="150px" width="150px" class="img-circle text-center" alt="Cinque Terre"><a>
    <a href="#thongtintaikhoan" class="list-group-item active show" data-toggle="tab"><span class="glyphicon glyphicon-user"></span> Thông tin tài khoản</a>
    <a href="#quanlymatkhau" class="list-group-item" data-toggle="tab"><span class="glyphicon glyphicon-lock"></span> Quản lý mật khẩu</a>
