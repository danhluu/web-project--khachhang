<!DOCTYPE HTML>
<html>
	<head>
		<title>{{title}}</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
		<link rel="stylesheet" href="/assets/bootstrap/css/bootstrap.min.css" />
		<link rel="stylesheet" href="/assets/css/main.css" />
		<noscript><link rel="stylesheet" href="/assets/css/noscript.css" /></noscript>
	</head>
  <body class="is-preload">
		<!-- Wrapper -->
	<div id="wrapper">>
      {{{body}}}
    </div>
	<script type="text/x-handlebars" id="product-items">
		\{{#each products}}
            <article class="style1">
                <span class="image">
                    <img src="\{{image}}" alt="" />
                </span>
                <a href="/products/\{{_id}}">
                    <h2>\{{name}}</h2>
                    <h3>\{{author}}</h3>
                    <p><strong>\{{price}}</strong></p>

                    <p>\{{categories}}</p>
                </a>
            </article>
        \{{/each}}
	</script>
	<script type="text/x-handlebars" id="page-controller">
		\{{#with info}}
                \{{#if hasPreviousPage}}
                <li class="page-item">
                <a class="page-link" onclick="getPageAjax('\{{firstPageQuery}}')" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
                </li>
                <li class="page-item"><a class="page-link" onclick="getPageAjax('\{{previousPageQuery}}')">\{{previousPage}}</a></li>
                \{{/if}}
                <li class="page-item active"><a class="page-link"onclick="getPageAjax('\{{currentPageQuery}}')">\{{currentPage}}</a></li>
                \{{#if hasNextPage}}
                <li class="page-item"><a class="page-link" onclick="getPageAjax('\{{nextPageQuery}}')">\{{nextPage}}</a></li>
                <li class="page-item">
                <a class="page-link" onclick="getPageAjax('\{{totalPageQuery}}')" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
                </li>
                \{{/if}}	
		\{{/with}}
	</script>
    <script type="text/x-handlebars" id="comment-section-script">
        <!-- More comments -->

        <li class="write-new">
            \{{#with comments.[0]}}
            <form method="POST" onsubmit="return writeComment(this)">
                <input type="hidden" name="bookId" value="\{{postId}}">
                <textarea placeholder="Write your name here if you haven't login" name="username"></textarea>
                <textarea placeholder="Write your comment here" name="comment" required></textarea>
                <div>
                    <button type="submit">Submit</button>
                </div>
            </form>
            \{{/with}}
        </li>
        \{{#each comments}}
        <li class="comment user-comment">
            <div class="info">
                <a href="#">\{{username}}</a>
                <span>\{{#datetime}}\{{timestampt}}\{{/datetime}}</span>
            </div>
            <a class="avatar" href="#">
            </a>
            <p>\{{content}}</p>
        </li>
        \{{/each}}
    </script>
    		<!-- Scripts -->
			<script src="/assets/js/jquery.min.js"></script>
			<script src="/assets/bootstrap/js/bootstrap.bundle.min.js"></script>
			<script src="/assets/js/jquery.scrolly.min.js"></script>
			<script src="/assets/js/jquery.scrollex.min.js"></script>
			<script src="/assets/js/main.js"></script>
			<script src="/assets/js/ajax-pagination.js"></script>
            <script src="/assets/js/ajax-comment.js"></script>
			<script src="https://cdn.jsdelivr.net/npm/handlebars@latest/dist/handlebars.js"></script>
  </body>
</html>
