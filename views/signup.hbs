{{>navbar}}
<div id="main">    
    <div class="inner">
        <div id="content" class="flex">
        <div class="">
            <div class="page-content page-container" id="page-content">
                <div class="padding">
                    <div class="row">
                        <div class="col-md-10">
                            <div class="card">
                                <div class="card-header"><strong>Join with us</strong></div>
                                <div class="card-body">
                                    {{#if message}}
                                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                        {{{message}}}
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">Ã—</span>
                                        </button>
                                    </div>
                                    {{/if}}
                                    <form action="/signup" method="POST">
                                        <div class="form-group"><label class="text-muted" for="email">Email address <span id="user-check"></span></label><input type="email" class="form-control" name= "email" id="email" aria-describedby="emailHelp" placeholder="Enter email" onkeyup="checkUserExist();" required> <small id="emailHelp" class="form-text text-muted">We don't share email with anyone</small></div>
                                        <div class="form-group"><label class="text-muted" for="name">User's name</label><input type="text" class="form-control" name= "name" id="name" aria-describedby="name" placeholder="Enter your Name" required></div>
        <div class="form-group"><label class="text-muted" for="password">Password</label><input type="password" class="form-control" name="password" id="password" placeholder="Password" required onkeyup='check();'> <small id="passwordHelp" class="form-text text-muted">your password is saved in encrypted form</small></div>
        <div class="form-group"><label class="text-muted" for="confirm_password">Repeat PassWord <span id='confirmMessage'></span></label><input type="password" class="form-control" name="confirm_password" id="confirm_password" placeholder="Confirm password" required
        onkeyup='check();'> </div>
                                        <button type="submit" class="btn primary" id="signUpSubmit">Submit</button>
                                    </form>
                                    <a href="/login">Already had an account?</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    </div>
